package fa.training.main;

import fa.training.entities.Ford;
import fa.training.entities.Sedan;
import fa.training.entities.Truck;

public class MyOwnAutoShop {
     public static void main(String[] args) {
		Sedan s1 = new Sedan(100, 1000, "black", 25);
		Sedan s2 = new Sedan(100, 1000, "white", 19);
		System.out.println(s1);
		System.out.println("Discount price: "+s1.getSalePrice());
		System.out.println(s2);
		System.out.println("Discount price: "+s2.getSalePrice());
		System.out.println("-------------------");
		
		Ford f1 = new Ford(200, 3000, "black", 2022, 2900);
		System.out.println(f1);
		System.out.println("Discount price: "+f1.getSalePrice());
		Ford f2 = new Ford(200, 3000, "Gray", 2022, 2800);
		System.out.println(f2);
		System.out.println("Discount price: "+f2.getSalePrice());
		System.out.println("--------------------");
		
		Truck t1 = new Truck(90, 2000, "Green", 1500);
		System.out.println(t1);
		System.out.println("Discount price: "+t1.getSalePrice());
		Truck t2 = new Truck(90, 2000, "Green", 3000);
		System.out.println(t2);
		System.out.println("Discount price: "+t1.getSalePrice());
		
	}
}
