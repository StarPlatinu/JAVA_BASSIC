package fa.training.entities;

import java.util.ArrayList;
import java.util.List;

public class Ford extends Car{
	private int year;
	private int manufacturerDiscount;
	List<Ford> ford = new ArrayList<Ford>();
	
	public Ford(int speed, double regularPrice, String color,int year, int manufacturerDiscount) {
		super(speed,regularPrice,color);
		this.year = year;
		this.manufacturerDiscount = manufacturerDiscount;
	}

	@Override
	double getSalePrice() {
		return super.getRegularPrice() - manufacturerDiscount; 
	}

	@Override
	public String toString() {
		return "Ford [Speed="+ super.getSpeed() +", regularPrice=" 
	+ super.getRegularPrice() +", color=" + super.getColor() +", year=" + year 
	+ ", manufacturerDiscount=" + manufacturerDiscount +  "]";
	}
	
	public void Fords() {
		
	}
}
